{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",              // <--- penting biar JSX.Element dikenali
    "types": ["react", "react-dom"], // <--- penting untuk JSX namespace
    "skipLibCheck": true,
    "noUnusedLocals": false,         // <--- matikan strict unused
    "noUnusedParameters": false,     // <--- matikan strict unused
    "strict": false,                 // <--- longgarin strict biar gampang deploy
    "noEmitOnError": false ,        

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}